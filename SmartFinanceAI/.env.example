# Application
APP_NAME=SmartFinanceAI
APP_ENV=development
DEBUG=True
PORT=5000

# Database (same MySQL as SmartFinanceBE - read-only access)
DATABASE_URL=mysql+pymysql://root:@localhost:3306/smart_finance

# AI Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
CHROMA_PERSIST_DIR=./chroma_data
AI_MAX_CONTEXT_TRANSACTIONS=100
AI_CONVERSATION_MEMORY_SIZE=10

# Service-to-Service Authentication
AI_SERVICE_API_KEY=smartfinance-ai-secret-key-change-in-production

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
